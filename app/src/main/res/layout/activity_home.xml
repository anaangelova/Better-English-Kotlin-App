<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFAFF"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="370dp"
        android:layout_height="586dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/randomWordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Get random word" />

            <RelativeLayout
                android:id="@+id/randomWordContainer"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="@drawable/word_of_the_day_container">

                <TextView
                    android:id="@+id/wordOfTheDayTextView"
                    android:layout_width="182dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Word of the Day"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/randomWordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wordOfTheDayTextView"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textColor="#000F65"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/partOfSpeechTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/randomWordTextView"
                    android:layout_marginLeft="130dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/definitionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/partOfSpeechTextView"
                    android:layout_marginLeft="60dp"
                    android:text="TextView" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logoutButton"
        android:layout_width="58dp"
        android:layout_height="61dp"
        android:clickable="true"
        android:src="@drawable/logout"
        app:backgroundTint="#A0BBFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>